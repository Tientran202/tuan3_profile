<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bodercolorstartend"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="40dp"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S"
            android:textSize="150sp"
            android:layout_marginLeft="100dp"
            android:textColor="#7A364D"
            >

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tudio"
            android:textSize="20sp"
            android:textColor="#7A364D"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="-40dp"

            >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A"
            android:textSize="150sp"
            android:textColor="#7A364D"
            android:layout_marginLeft="120dp"
            >

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ndroid"
            android:textSize="20sp"
            android:textColor="#7A364D"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="-40dp"

            >
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="270dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="350dp"
        android:background="@drawable/boder"
        android:orientation="vertical">

        <EditText
            android:id="@+id/tendangnhap"
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/boder"
            android:hint="Nhập tên đăng nhập"
            android:paddingLeft="20dp">

        </EditText>

        <EditText
            android:id="@+id/matkhau"
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/boder"
            android:hint="Nhập mật khẩu"
            android:paddingLeft="20dp">

        </EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/dangnhap"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/bodercolor"
                android:text="Đăng nhập"
                android:textColor="@color/white">

            </androidx.appcompat.widget.AppCompatButton>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="650dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dangky"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng ký"
            android:textColor="@color/white"
            android:textSize="18dp"
            >

        </TextView>
        <View
            android:layout_width="2dp"
            android:layout_height="25dp"
            android:background="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >

        </View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quên mật khẩu!!"
            android:textColor="@color/white"
            android:textSize="18dp">

        </TextView>
    </LinearLayout>

</RelativeLayout>